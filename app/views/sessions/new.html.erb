<h3>
    Welcome to Shades. You can keep track of your books and check out other people's books here.
</h3>



<% flash.each do |type, msg| %>
      <div class="alert-info">
        <%= msg %>
      </div>
    <% end %>


<%= form_with url: '/login', local: true do |f| %>
    <h5>
        Please Log in!
    </h5>
    <h5>
        <%= f.label :email %>
        <%= f.text_field :email%> <br><br>
        
        <%= f.label :password %>
        <%= f.password_field :password%> <br><br>
        <%= f.submit "Login" %>
        <br>
        <br>
        <%= link_to "Log in with Google", '/auth/google_oauth2', method: :post %>
    </h5>
<% end %>

