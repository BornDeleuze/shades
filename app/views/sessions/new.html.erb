<h3>
    Welcome to Shades. You can keep track of the books you have here.
</h3>

<% flash.each do |type, msg| %>
      <div class="alert-info">
        <%= msg %>
      </div>
    <% end %>

<%= form_with url: '/login', local: true do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email%> <br><br>
    
    <%= f.label :password %>
    <%= f.password_field :password%> <br><br>
    <%= f.submit "Login" %>
    <br>
    <br>
    <%= link_to "Log in with Google", '/auth/google_oauth2', method: :post %>
<% end %>
