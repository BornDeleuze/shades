

<%= form_with model: [@user, @user_book], local: true do |f| %>
    <%= f.label "Book title"%>
    <%= f.text_field :user_book_title, required:true, class: @user.errors.any? ? "error-field" : nil  %>
    <br>
    <%= f.label "Author"%>
    <%= f.text_field :user_book_author, required:true, class: @user.errors.any? ? "error-field" : nil  %>
    <br>
    <%= f.label "Genre"%>
    <%= f.text_field :user_book_genre%>
    <br>
    <%= f.label "Condition" %>
    <%= f.text_field :user_book_condition %>

    <%= f.submit %>
<% end %>