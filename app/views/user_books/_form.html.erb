
<%= form_for @user_book do |f| %>
    <%= f.label "Condition" %>
    <%= f.text_field :condition %>
    <br>
    
    
    <%= f.fields_for :book do |ff|%>
        <%= ff.label "Book title"%>
        <%= ff.text_field :title, required:true, class: @user.errors.any? ? "error-field" : nil  %>
        <br>
        <%= ff.label "Author"%>
        <%= ff.text_field :author, required:true, class: @user.errors.any? ? "error-field" : nil  %>
        <br>
        <%= ff.label "Genre"%>
        <%= ff.text_field :genre%>
        <br>    
    <% end %>

    <%= f.submit %>
<% end %>